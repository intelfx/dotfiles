#!/hint/zsh

alias k='kubectl'
alias kg='kubectl get'
alias kgS='kubectl get -n kube-system'
alias kgp='kubectl get pods'
alias kgpS='kubectl get pods -n kube-system'
alias kgn='kubectl get nodes'
alias kgnS='kubectl get nodes -n kube-system'
alias kgs='kubectl get services'
alias kgsS='kubectl get services -n kube-system'
alias kgi='kubectl get ingresses'
alias kgiS='kubectl get ingresses -n kube-system'
alias kd='kubectl describe'
alias kdS='kubectl describe -n kube-system'
alias kdp='kubectl describe pods'
alias kdpS='kubectl describe pods -n kube-system'
alias kdn='kubectl describe nodes'
alias kdnS='kubectl describe nodes -n kube-system'
alias kds='kubectl describe services'
alias kdsS='kubectl describe services -n kube-system'
alias kdi='kubectl describe ingresses'
alias kdiS='kubectl describe ingresses -n kube-system'
