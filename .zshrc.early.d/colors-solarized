#!/hint/zsh

#
# Set the exact Solarized palette on VT
#

# WSL terminals don't play nice with ESC ] P
# If under WSL, assume Solarized has been configured
if [[ "$WSLENV" ]]; then
	export IS_SOLARIZED=1
	return
fi

# If not on VT, assume Solarized has been configured
if [[ "$TERM" != linux && "$TERM" != vt* ]]; then
	export IS_SOLARIZED=1
	return
fi

if [[ $1 == reset ]]; then
	cat <<-"EOF" | tr -d ' \t\n'
		]R
		[0;37;40m
		[8]
		[J
	EOF
	return
fi

cat <<-"EOF" | tr -d ' \t\n'
	]R
	]P0073642
	]P1dc322f
	]P2859900
	]P3b58900
	]P4268bd2
	]P5d33682
	]P62aa198
	]P7eee8d5
	]P8002b36
	]P9cb4b16
	]PA586e75
	]PB657b83
	]PC839496
	]PD6c71c4
	]PE93a1a1
	]PFfdf6e3
	[0;100;94m
	[8]
	[J
EOF
#
#	[H[J
#	[0;100;94m
#	[8]
#	[1;12]
#	[2;12]
#
export IS_SOLARIZED=1
