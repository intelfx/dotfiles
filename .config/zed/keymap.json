// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Workspace",
    "bindings": {
      "shift shift": "file_finder::Toggle"
    },
  },
  {
    "context": "vim_mode == visual",
    "bindings": {
      "S": ["vim::PushAddSurrounds", {}],
    },
  },

  // Use Alt-R for buffer symbols, and Alt-Shift-R for project symbols
  {
    "context": "Editor",
    "bindings": {
      "alt-r": "outline::Toggle",
      "ctrl-shift-r": null, // was project_symbols::Toggle
      "alt-shift-r": "project_symbols::Toggle",
    }
  },

  // Use C-K K-B to invoke project panel if not in it, or to hide project panel if in it
  {
    "context": "(Workspace || Pane || Editor) && !ProjectPanel",
    "bindings": {
      "ctrl-k ctrl-b": "project_panel::ToggleFocus"
    }
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      "ctrl-k ctrl-b": "workspace::ToggleLeftDock"
    }
  },

  // Use C-K K-G to invoke git panel if not in it, or to hide git panel if in it
  {
    "context": "(Workspace || Pane || Editor) && !GitPanel",
    "bindings": {
      "ctrl-k ctrl-g": "git_panel::ToggleFocus"
    }
  },
  {
    "context": "GitPanel",
    "bindings": {
      "ctrl-k ctrl-g": "workspace::ToggleLeftDock"
    }
  },
]
