// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Workspace",
    "bindings": {
      "shift shift": "file_finder::Toggle"
    },
  },

  // Port obvious missing QoL things for Zed's Vim mode
  {
    "context": "(vim_mode == normal) || (vim_mode == visual) || (vim_mode == operator)",
    "bindings": {
      ",": ["workspace::SendKeystrokes", ":"]
    }
  },
  {
    "context": "vim_mode == visual",
    "bindings": {
      // enable visual surround Ã  la vim-surround (binding does not exist by default)
      "S": ["vim::PushAddSurrounds", {}],
      // equivalent of `vnoremap $ g_` to make it play better with visual surround
      "$": "vim::EndOfLineDownward",
      // ditto
      "end": "vim::EndOfLineDownward",
    },
  },

  {
    "context": "Editor && edit_prediction && vim_mode == insert",
    "bindings": {
      "ctrl-x ctrl-x": "editor::Cancel",
      "\\": "editor::Cancel",
      // "tab": "editor::Tab",
    }
  },

  // Use Alt-R for buffer symbols, and Alt-Shift-R for project symbols
  {
    "context": "Editor",
    "bindings": {
      "alt-r": "outline::Toggle",
      "ctrl-shift-r": null, // was project_symbols::Toggle
      "alt-shift-r": "project_symbols::Toggle",
    }
  },

  // Use C-K K-B to invoke project panel if not in it, or to hide project panel if in it
  {
    "context": "(Workspace || Pane || Editor) && !ProjectPanel",
    "bindings": {
      "ctrl-k ctrl-b": "project_panel::ToggleFocus"
    }
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      "ctrl-k ctrl-b": "workspace::ToggleLeftDock"
    }
  },

  // Use C-K K-G to invoke git panel if not in it, or to hide git panel if in it
  {
    "context": "(Workspace || Pane || Editor) && !GitPanel",
    "bindings": {
      "ctrl-k ctrl-g": "git_panel::ToggleFocus"
    }
  },
  {
    "context": "GitPanel",
    "bindings": {
      "ctrl-k ctrl-g": "workspace::ToggleLeftDock"
    }
  },
]
