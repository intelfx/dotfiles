command! Vimp vim -p %f
command! Vimo vim -o %f
command! VimO vim -O %f
command! Vimdiff vimdiff %b

nnoremap ,V :edit<CR>
nnoremap ,vp :Vimp %f<CR>
nnoremap ,vo :Vimo %f<CR>
nnoremap ,vO :VimO %f<CR>
