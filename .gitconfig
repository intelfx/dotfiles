[include]
	path = ~/.gitconfig.private
[core]
	preloadindex = 1
	quotepath = off
	quotedpath = false
[guitool "Interactive history rewrite"]
	cmd = git rebase -i $REVISION
	revprompt = yes
[url "git@git.kde.org:"]
	insteadOf = kde:
	insteadOf = git://anongit.kde.org/
	insteadOf = https://anongit.kde.org/
[url "git@github.com:"]
	insteadOf = gh:
	insteadOf = git://github.com/
	insteadOf = https://github.com/
[url "aur@aur.archlinux.org:"]
	insteadOf = aur:
	insteadOf = git://aur.archlinux.org/
	insteadOf = https://aur.archlinux.org/
[url "git@gitlab.com:"]
	insteadOf = gl:
	insteadOf = git://gitlab.com/
	insteadOf = https://gitlab.com/
[rerere]
	enabled = 1
	autoupdate = true
[push]
	default = simple
[sendemail]
	annotate = true
[color]
	diff = auto
	ui = auto
[color "status"]
	header = 10 # "bold green", solarized secondary
	added = yellow
	changed = green
	untracked = cyan
	branch = 14 # "bold cyan", solarized emphasis
	nobranch = bold black red
	unmerged = bold red
[color "blame"]
	highlightRecent = 10,6 month ago,normal,1 month ago,bold,1 day ago,yellow
[status]
	showUntrackedFiles = normal
[gui]
	editor = xdg-open
	historybrowser = gitg
[merge]
	conflictstyle = diff3
	tool = vimdiff
	summary = true
[svn]
	pushmergeinfo = true
[cola]
	tabwidth = 8
	textwidth = 80
	savewindowsettings = true
	linebreak = true
	fontdiff = Iosevka Light,10,-1,5,50,0,0,0,0,0
	spellcheck = false
	safemode = true
	boldheaders = true
	showpath = true
[diff]
	tool = vimdiff
	algorithm = patience
[clean]
	requireForce = false
[credential]
	helper = /usr/bin/pass-git-helper -l
[rebase]
	autosquash = true
[alias]
	for-each-ref-name = for-each-ref --format '%(refname:short)'
[blame]
	coloring = highlightRecent
	showEmail = true
	date = short
